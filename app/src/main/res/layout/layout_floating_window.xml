<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 完整状态的悬浮窗 -->
    <LinearLayout
        android:id="@+id/layout_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/floating_window_background"
        android:elevation="8dp"
        android:visibility="visible">

        <!-- 拖动手柄 -->
        <View
            android:id="@+id/view_drag_handle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/drag_handle" />

        <!-- 状态指示 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <View
                android:id="@+id/view_float_status_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_indicator"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_float_status"
                style="@style/LabelTextStyle"
                android:text="@string/status_idle"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 控制按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 开始按钮 -->
            <Button
                android:id="@+id/btn_float_start"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/float_start"
                android:textSize="12sp"
                android:textColor="@color/text_white"
                android:background="@drawable/button_primary"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false" />

            <!-- 停止按钮 -->
            <Button
                android:id="@+id/btn_float_stop"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/float_stop"
                android:textSize="12sp"
                android:textColor="@color/primary_blue"
                android:background="@drawable/button_outlined"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"
                android:enabled="false" />

            <!-- Dump按钮 (⚠️ 开发专用,正式版将移除) -->
            <Button
                android:id="@+id/btn_float_dump"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="Dump"
                android:textSize="11sp"
                android:textColor="@android:color/holo_red_dark"
                android:background="@drawable/button_dump"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false" />

            <!-- 最小化按钮 -->
            <Button
                android:id="@+id/btn_float_minimize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="—"
                android:textSize="18sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/button_outlined"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

    <!-- 最小化状态的悬浮窗 (小圆点) -->
    <LinearLayout
        android:id="@+id/layout_minimized"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/floating_window_minimized"
        android:elevation="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_minimized_dump"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dump"
            android:textSize="10sp"
            android:textColor="@color/text_white"
            android:background="@android:color/transparent"
            android:textAllCaps="false" />

    </LinearLayout>

</FrameLayout>
