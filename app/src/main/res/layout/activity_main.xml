<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white">

    <!-- 标题栏 -->
    <RelativeLayout
        style="@style/TitleBarStyle">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TitleTextStyle"
            android:layout_centerInParent="true"
            android:text="@string/main_title" />

        <!-- 悬浮窗开关 -->
        <ImageView
            android:id="@+id/iv_toggle_float"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_view"
            android:tint="@color/text_white"
            android:contentDescription="显示/隐藏悬浮窗" />

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:tint="@color/text_white"
            android:contentDescription="@string/btn_settings" />
    </RelativeLayout>

    <!-- 主内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 状态卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardViewStyle"
                android:layout_marginBottom="24dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="20dp"
                android:background="@drawable/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/glass_card_background">

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="当前状态"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- 状态指示器 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/status_indicator_background"
                        android:padding="12dp">

                        <View
                            android:id="@+id/view_status_indicator"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@drawable/status_indicator"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_status"
                            style="@style/StatusTextStyle"
                            android:text="@string/status_idle"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- 状态详情 -->
                    <TextView
                        android:id="@+id/tv_status_detail"
                        style="@style/ContentTextStyle"
                        android:layout_marginTop="12dp"
                        android:text="等待开始自动化任务"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 备注输入卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardViewStyle"
                android:layout_marginBottom="24dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="20dp"
                android:background="@drawable/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/glass_card_background">

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="录屏备注"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- 输入框 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入备注内容"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary_blue"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="@color/primary_blue"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="56dp"
                            android:maxLines="3"
                            android:maxLength="100"
                            android:inputType="text"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 控制按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 开始按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start"
                    style="@style/PrimaryButtonStyle"
                    android:text="开始自动化"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:elevation="8dp"
                    app:cornerRadius="16dp"
                    android:layout_marginBottom="16dp"
                    android:stateListAnimator="@null"
                    android:translationZ="4dp" />

                <!-- 停止按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_stop"
                    style="@style/SecondaryButtonStyle"
                    android:text="停止任务"
                    android:textSize="16sp"
                    android:enabled="false"
                    app:cornerRadius="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="8dp"
                    android:stateListAnimator="@null"
                    android:translationZ="4dp" />

                <!-- 查看日志按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_log"
                    style="@style/SecondaryButtonStyle"
                    android:text="查看日志"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"
                    android:elevation="8dp"
                    android:stateListAnimator="@null"
                    android:translationZ="4dp" />
            </LinearLayout>

            <!-- 功能说明卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardViewStyle"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/background_light_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/ContentTextStyle"
                        android:text="使用说明"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="1. 确保已开启无障碍服务权限"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="2. 确保已安装权利卫士应用"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="3. 点击开始按钮启动自动化"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="4. 可通过悬浮窗快速控制" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

