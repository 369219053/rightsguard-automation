<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white">

    <!-- 标题栏 -->
    <RelativeLayout
        style="@style/TitleBarStyle">
        
        <TextView
            android:id="@+id/tv_title"
            style="@style/TitleTextStyle"
            android:layout_centerInParent="true"
            android:text="@string/main_title" />
        
        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:tint="@color/text_white"
            android:contentDescription="@string/btn_settings" />
    </RelativeLayout>

    <!-- 主内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 状态卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardViewStyle"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="@string/current_status"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/view_status_indicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/status_indicator"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_status"
                            style="@style/StatusTextStyle"
                            android:text="@string/status_idle"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_status_detail"
                        style="@style/ContentTextStyle"
                        android:layout_marginTop="12dp"
                        android:text="等待开始自动化任务"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 备注输入卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardViewStyle"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="录屏备注"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        style="@style/ContentTextStyle"
                        android:text="自定义名称（选填，不会显示在证书上）"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入备注内容"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary_blue"
                        app:hintTextColor="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:inputType="text"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 控制按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 开始按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start"
                    style="@style/PrimaryButtonStyle"
                    android:text="@string/btn_start"
                    android:layout_marginBottom="16dp" />

                <!-- 停止按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_stop"
                    style="@style/SecondaryButtonStyle"
                    android:text="@string/btn_stop"
                    android:enabled="false"
                    android:layout_marginBottom="16dp" />

                <!-- 查看日志按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_log"
                    style="@style/SecondaryButtonStyle"
                    android:text="@string/btn_view_log" />
            </LinearLayout>

            <!-- 功能说明卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardViewStyle"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/background_light_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/ContentTextStyle"
                        android:text="使用说明"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="1. 确保已开启无障碍服务权限"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="2. 确保已安装权利卫士应用"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="3. 点击开始按钮启动自动化"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        style="@style/LabelTextStyle"
                        android:text="4. 可通过悬浮窗快速控制" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

